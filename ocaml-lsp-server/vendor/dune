(subdir dune-rpc
 (subdir private
  (library
   (name dune_rpc_private)
   (libraries stdune csexp))

  (ocamllex dbus_address)
  (copy_files# %{project_root}/submodules/dune/otherlibs/dune-rpc/private/*.{ml,mli,mll}))

 (copy_files# %{project_root}/submodules/dune/otherlibs/dune-rpc/*.{ml,mli})
 (library
  (name dune_rpc)
  (libraries stdune csexp (re_export dune_rpc_private))))

(subdir csexp_rpc
 (copy_files# %{project_root}/submodules/dune/src/csexp_rpc/*.{ml,mli})
 (library
  (name csexp_rpc)
  (synopsis "Threaded client & server that uses csexp for communication")
  (libraries stdune csexp fiber)))

(subdir ocamlc_loc
